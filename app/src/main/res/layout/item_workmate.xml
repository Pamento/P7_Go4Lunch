<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workmate_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/workmate_img"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/size_s"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_persona_placeholder" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/workmate_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_n"
            android:ellipsize="middle"
            android:maxLines="2"
            android:textSize="16sp"
            tools:text="Scarlett goes at (Le Zinc) Scarlett goes at (Le Zinc)Scarlett goes at (Le Zinc)Scarlett goes at (Le Zinc)Scarlett goes at (Le Zinc)" />

    </LinearLayout>
</androidx.cardview.widget.CardView>